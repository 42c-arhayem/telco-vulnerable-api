  "components": {
    "parameters": {
      "orderId": {
        "name": "orderId",
        "description": "The ID of the order to retrieve.",
        "required": true,
        "in": "path",
        "schema": {
          "$ref": "#/components/schemas/orderId"
        }
      },
      "customerId": {
        "name": "customerId",
        "description": "The ID of the customer to filter orders.",
        "required": false,
        "in": "query",
        "schema": {
          "$ref": "#/components/schemas/customerId"
        }
      },
      "username": {
        "name": "username",
        "in": "path",
        "description": "The unique username of the user to delete.",
        "required": true,
        "schema": {
          "$ref": "#/components/schemas/username"
        }
      }
    },
    "schemas": {
      "username": {
        "type": "string",
        "pattern": "^[\\sa-zA-Z0-9]{5,35}$",
        "example": "username",
        "minLength": 5,
        "maxLength": 35
      },
      "password": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9&@#!?]{8,64}$",
        "example": "password",
        "format": "o:common:password",
        "minLength": 8,
        "maxLength": 64,
        "x-42c-format": "o:common:password"
      },
      "email": {
        "type": "string",
        "pattern": "^[\\w\\-+.]+@((\\w\\-?)+\\.){1,4}[a-zA-Z0-9]{2,63}$",
        "example": "user@domain.com",
        "format": "email",
        "minLength": 5,
        "maxLength": 68,
        "x-42c-format": "o:email"
      },
      "address": {
        "type": "object",
        "properties": {
          "street": {
            "type": "string",
            "example": "123 Main St.",
            "pattern": "^[a-zA-Z0-9.\\s]{5,100}$",
            "minLength": 0,
            "maxLength": 100
          },
          "city": {
            "type": "string",
            "pattern": "^[a-zA-Z\\s]{3,50}$",
            "example": "Springfield",
            "minLength": 3,
            "maxLength": 50
          },
          "state": {
            "type": "string",
            "example": "IL",
            "pattern": "^[a-zA-Z]{2,50}$",
            "minLength": 2,
            "maxLength": 2
          },
          "postcode": {
            "type": "string",
            "example": "62701",
            "pattern": "^[a-zA-Z0-9\\s]{5,12}$",
            "minLength": 5,
            "maxLength": 12
          },
          "country": {
            "type": "string",
            "example": "US",
            "pattern": "^[a-zA-Z]{2,50}$",
            "minLength": 2,
            "maxLength": 2
          }
        },
        "additionalProperties": false
      },
      "productId": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9]{5,10}$",
        "example": "SIM001",
        "minLength": 5,
        "maxLength": 10
      },
      "customerId": {
        "type": "string",
        "format": "uuid",
        "example": "123e4567-e89b-12d3-a456-426614174000"
      },
      "quantity": {
        "type": "integer",
        "format": "int32",
        "example": 1,
        "minimum": 0,
        "maximum": 100
      },
      "status": {
        "type": "string",
        "pattern": "^(processing|completed|canceled)$",
        "example": "completed",
        "minLength": 9,
        "maxLength": 10
      },
      "orderId": {
        "type": "string",
        "format": "uuid",
        "example": "123e4567-e89b-12d3-a456-426614174000",
        "pattern": "^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}$",
        "minLength": 36,
        "maxLength": 36,
        "x-42c-format": "o:uuid"
      },
      "token": {
        "type": "string",
        "pattern": "^([a-zA-Z0-9_=]{4,})\\.([a-zA-Z0-9_=]{4,})\\.([a-zA-Z0-9_\\-\\+\\/=]{4,})",
        "minLength": 25,
        "maxLength": 1000,
        "format": "o:common:JWT",
        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c",
        "x-42c-format": "o:common:JWT"
      },
      "orderDate": {
        "type": "string",
        "format": "date-time",
        "example": "2021-08-30T23:01:14.274085491+15:55",
        "pattern": "^[0-9]{4}-(?:0[1-9]|1[0-2])-(?:0[1-9]|[12][0-9]|3[01])T(?:[01][0-9]|2[0-3]):[0-5][0-9]:(?:[0-5][0-9]|60)(?:\\.[0-9]{1,15})?(?:Z|[+\\-](?:[01][0-9]|2[0-3]):[0-5][0-9])$",
        "minLength": 20,
        "maxLength": 38,
        "x-42c-format": "o:date-time"
      },
      "MessageObject": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "message": {
                "$ref": "#/components/schemas/ResponseMessage"
              }
            },
            "required": ["message"]
          },
          {
            "type": "object",
            "properties": {
              "error": {
                "$ref": "#/components/schemas/ResponseMessage"
              }
            },
            "required": ["error"]
          }
        ]
      },
      "ResponseMessage": {
        "type": "string",
        "pattern": "^[A-Za-z0-9\/\\.\"', :_]{1,100}$"
      }
    },
    "responses": {
      "DefaultErrorResponse": {
        "description": "Unexpected Error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/MessageObject"
            }
          }
        }
      },
      "ResponseError400": {
        "description": "Invalid input data",
        "content": {
          "application/json": {
